{
    "name": "swp/multi-tenancy-bundle",
    "type": "symfony-bundle",
    "description": "This bundle provides tools to build multi-tenant architecture for PHP applications.",
    "keywords": ["multi-tenancy", "tenant", "superdesk", "webpublisher", "saas"],
    "license":"GPL-3.0",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Rafał Muszyński",
            "email": "rafal.muszynski@sourcefabric.org"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/takeit/multi-tenancy"
        },
        {
            "type": "vcs",
            "url": "https://github.com/takeit/common"
        }
    ],
    "require": {
        "php": ">=5.4|^7.0",
        "symfony/framework-bundle": "~2.3|~3.0",
        "swp/multi-tenancy": "^1.0@dev",
        "doctrine/doctrine-bundle": "~1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6",
        "phpspec/phpspec": "^2.4",
        "symfony/expression-language": "~2.3",
        "symfony-cmf/routing-bundle": "^1.3",
        "doctrine/orm": "^2.4.8,<2.5"
    },
    "suggest": {
        "doctrine/phpcr-bundle": "To enable support for the PHPCR ODM documents",
        "doctrine/phpcr-odm": "To enable support for the PHPCR ODM documents",
        "symfony-cmf/routing-bundle": "To be able to use tenant aware paths for PHPCR"
    },
    "autoload": {
        "exclude-from-classmap": [
            "Tests/",
            "spec/"
        ],
        "psr-4": { "SWP\\MultiTenancyBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": {
            "SWP\\MultiTenancyBundle\\Tests\\": "Tests/",
            "SWP\\MultiTenancyBundle\\spec\\": "spec/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
